{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/electron",
    "rootDir": "./src",
    "declaration": false,
    "sourceMap": true
  },
  "include": ["src/main/**/*", "src/preload.ts"],
  "exclude": ["node_modules", "dist"]
}
