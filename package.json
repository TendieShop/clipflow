{
  "name": "clipflow",
  "version": "1.0.0",
  "description": "AI-powered video editor",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "dev:tauri": "tauri dev",
    "build:tauri": "tauri build",
    "lint": "eslint src --max-warnings=10",
    "test": "vitest run --coverage",
